{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://your-backend-url.onrender.com/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "REACT_APP_API_URL": "https://your-backend-url.onrender.com"
    }
}